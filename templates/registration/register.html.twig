{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block navone %}
	<li class="nav-item">
		<a class="nav-link" href="{{path('app_home')}}">
			<span class="fa fa-sign-in"></span>
			Home</a>
	</li>
{% endblock %}
{% block navtwo %}
	<li class="nav-item">
		<a class="nav-link" href="{{path('app_login')}}">Login</a>
	</li>
{% endblock %}

{% block body %}


	<main class="mb-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-11 mx-auto">
					<h1 class="edica-page-title" data-aos="fade-up">Student Registration</h1>
					<section class="edica-contact py-5 mb-5">
						<div class="row">
							<div class="col-md-8 contact-form-wrapper">
								<h5 data-aos="fade-up">Registration Form</h5>
								{{ form_start(registrationForm) }}

								<div class="row">
									<div class="form-group col-md-6" data-aos="fade-up">
										{# <label for="name">NAME</label>
										<input type="text" class="form-control" id="name" name="name" placeholder="Your full name"> #}
										{{form_row(registrationForm.Name)}}

									</div>
									<div class="form-group col-md-6" data-aos="fade-up">
										{# <label for="phone">PHONE</label>
										<input type="text" class="form-control" id="phone" name="phone" placeholder="Phone"> #}
										{{form_row(registrationForm.Phone)}}
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-6" data-aos="fade-up" data-aos-delay="100">
										{# <label for="email">EMAIL</label>
										<input type="email" class="form-control" id="email" name="email" placeholder="Email address"> #}
										{{ form_row(registrationForm.email) }}
									</div>
									{# <div class="form-group col-md-6" data-aos="fade-up" data-aos-delay="100">
										<label for="subject">SUBJECT</label>
										<input type="text" class="form-control" id="subject" name="subject" placeholder="Subject">
									</div> #}
								</div>
								<div class="row">
									<div class="form-group col-12" data-aos="fade-up" data-aos-delay="200">
										{# <label for="message">MESSAGE</label>
										<textarea name="message" id="message" rows="9" class="form-control">Textarea field</textarea> #}
										{{ form_row(registrationForm.plainPassword) }}
									</div>
								</div>
								<div class="row">
									<div class="form-group col-12" data-aos="fade-up" data-aos-delay="200">
										{{ form_row(registrationForm.agreeTerms) }}
									</div>

								</div>

								<button type="submit" class="btn btn-warning btn-lg" data-aos="fade-up" data-aos-delay="300">Register</button>
								{{ form_end(registrationForm) }}

							</div>
						</div>
					</section>
				</div>
			</div>
		</div>
	</main>

{% endblock %}
