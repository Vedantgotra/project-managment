{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block navone %}
<li class="nav-item">
		<a class="nav-link" href="{{path('app_home')}}">Home</a>
	</li>{% endblock %}
{% block navtwo %}
<li class="nav-item">
		<a class="nav-link" href="{{path('app_teacher_register')}}">Register</a>
	</li>
{% endblock %}
{% block teacherpanel %}{% endblock %}
{% block body %}

	<main class="mb-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-11 mx-auto">
					<h1 class="edica-page-title" data-aos="fade-up">Teacher Login</h1>
					<section class="edica-contact py-5 mb-5">
						<div class="row">
							<div class="col-md-8 contact-form-wrapper">
								<h5 data-aos="fade-up">Login form</h5>
								<form method="post">
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}
									<div class="row">
										<div class="form-group col-md-6" data-aos="fade-up" data-aos-delay="100">
											<label for="inputEmail">EMAIL</label>
											<input type="email" class="form-control" id="inputEmail" name="email" value="{{ last_username }}" placeholder="Email address">
										</div>
									</div>
									<div class="row">
										<div class="form-group col-md-6" data-aos="fade-up">
											<label for="inputPassword">Password</label>
											<input type="password" value="{{ last_username }}" class="form-control" id="inputPassword" name="password" placeholder="Your full name">
										</div>
									</div>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<button type="submit" class="btn btn-warning btn-lg" data-aos="fade-up" data-aos-delay="300">Login</button>
								</form>
              
							</div>

						</div>
					</section>
				</div>
			</div>
		</div>
	</main>
	{% endblock %}
